<script>
     document.getElementById("TicketBox1").addEventListener("keydown", function (e) {
         if (!e) { var e = window.event; }
         // e.preventDefault(); // sometimes useful

         // Enter is pressed
         if (e.keyCode == 13) { SearchTicketAdminOther(); }
     }, false);

     function OpenProgressBar() {
         $(".ldrpge").show();
     }

     function CloseProgessBar() {
         // debugger;
         $(".ldrpge").hide();
     }
    // AllResultView

     function SearchTicketAdminOther() {
         flag = true;

         OpenProgressBar();
         if (flag) {

             var RollNumber=$("#TicketBox1").val();
             var divpdis = "/Admin/Dashboard/CheckResultDataSearch?RollNumber=";
             $("#pagedetailssearch").load(divpdis + RollNumber, function () {
                 CloseProgessBar();

             });

         };
     }


    

</script>
