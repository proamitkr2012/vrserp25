<script>
    const dropBtn = document.getElementById("dropBtn");
    const dropMenu = document.getElementById("dropMenu");
    const selectAll = document.getElementById("selectAll");
    const checks = document.querySelectorAll(".chk");
    const output = document.getElementById("output");

    dropBtn.addEventListener("click", () => {
      dropMenu.style.display = dropMenu.style.display === "block" ? "none" : "block";
    });

    document.addEventListener("click", (e) => {
      if (!e.target.closest(".dropdown")) dropMenu.style.display = "none";
    });

    selectAll.addEventListener("change", () => {
      checks.forEach(cb => cb.checked = selectAll.checked);
      showSelected();
    });

    checks.forEach(cb => {
      cb.addEventListener("change", () => {
        const all = [...checks].every(c => c.checked);
        const some = [...checks].some(c => c.checked);
        selectAll.checked = all;
        selectAll.indeterminate = !all && some;
        showSelected();
      });
    });

    function showSelected(){
      const selected = [...checks]
        .filter(cb => cb.checked)
        // .map(cb => cb.value);
       .map(cb => cb.parentElement.textContent.trim());

       const selectedvalue = [...checks]
        .filter(cb => cb.checked)
         .map(cb => cb.value);
       //.map(cb => cb.parentElement.textContent.trim());


         // Output text
    output.textContent =  selectedvalue.join(", ");

      // Button display rule
      if (selected.length === 0) {
        dropBtn.textContent = "Select Course";
      }
      else if (selected.length <= 1) {
        dropBtn.textContent = selected.join(", ");
      }
      else {
        dropBtn.textContent = selected.length + " Selected";
      }
        }

        function filterOptions() {
      const searchValue = document.getElementById('searchBox').value.toLowerCase();
      document.querySelectorAll('.dropdown-item').forEach(item => {
        const text = item.innerText.toLowerCase();
        item.style.display = text.includes(searchValue) ? 'flex' : 'none';
      });
    }
    


</script>
